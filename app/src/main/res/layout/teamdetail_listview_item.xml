<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:tag="skin:line:background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_usr_headimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:actualImageScaleType="centerCrop"
            app:roundAsCircle="true"
            android:src="@drawable/myaccounthead"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/textView_usr_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="skin:textColor2:textColor"
            android:layout_height="wrap_content"
            android:text="董子健"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/textView_usr_vip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="未开通会员"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/textView_usr_lev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新兵"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:tag="skin:textColor2:textColor"
            android:textSize="12sp"
            android:layout_marginRight="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</LinearLayout>