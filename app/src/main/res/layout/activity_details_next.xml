<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:onClick="onClick"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.mine.Account.MineDetail.DetailsNextActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/appbar_day"
        android:focusableInTouchMode="true"
        android:tag="skin:appbar:background">
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/textView_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tizhong"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/bg_adress_day"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:tag="skin:bg_adress:background">
        <EditText
            android:id="@+id/edit_personDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请您仔细填写"
            android:background="#fff"
            android:padding="8dp"
            android:cropToPadding="true"
            android:tag="skin:textColor:textColor|skin:line:background"
            android:textSize="14sp"
            android:textColorHint="#FF8D8C8D"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>
