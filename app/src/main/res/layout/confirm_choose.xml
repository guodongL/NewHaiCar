<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_hotCar"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/confirm_dialog_bg"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期区间"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="11dp"/>
        <ImageView
            android:id="@+id/image_dismiss"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="11dp"
            android:src="@drawable/cancel"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="9dp"
            android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/button_startTime"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="开始时间"
            android:textColor="#fff"
            android:background="@drawable/bg_button_choose"/>
            <View
                android:layout_width="18dp"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/button_endTime"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:textColor="#fff"
                android:text="结束时间"
                android:background="@drawable/bg_button_choose"/>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_below="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="14dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/view1"
            android:layout_marginTop="14dp">
        <ScrollView
            android:id="@+id/scroll_hotcar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门车型"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="11dp"/>
   <com.example.administrator.myhaicar.commond.MyGridView
     android:id="@+id/gridView_hotCar"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="11dp"
     android:layout_marginRight="11dp"
     android:numColumns="1"
     android:layout_marginTop="5dp">
     </com.example.administrator.myhaicar.commond.MyGridView>
            </LinearLayout>
        </ScrollView>
            <Button
                android:id="@+id/button_complete"
                android:layout_width="183dp"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:text="完成"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_button_choose"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>