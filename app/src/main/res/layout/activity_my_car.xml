<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.mine.MyCar.Acticity.MyCarActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/appbar_day"
        android:tag="skin:appbar:background">
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加车辆"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/imaeView_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/carteam1"
            android:layout_marginRight="18dp"/>
    </android.support.v7.widget.Toolbar>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/car_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="64dp"

      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <com.example.administrator.myhaicar.commond.MySwipeMenuListView
                android:id="@+id/swipeMenuListView_carActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:listSelector="#00000000"
                android:layout_marginTop="15dp"
                android:showDividers="none"
                android:divider="#eee"/>
            <ImageView
                android:id="@+id/add_car"
                android:layout_width="match_parent"
                android:layout_below="@+id/swipeMenuListView_carActivity"
                android:layout_height="70dp"
                android:src="@drawable/addcarteam_day"
                android:tag="skin:addcarteam:src"/>
            <RelativeLayout
                android:id="@+id/relative_nocar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
               >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="skin:nocar:src"
                    android:src="@drawable/nocar_day"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:tag="skin:textColor19:textColor"
                    android:textColor="#646262"
                    android:text="您还没有添加车辆赶快添加吧"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <RelativeLayout
        android:id="@+id/relative_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:clickable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/delecar"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/image_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iknow"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_addcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:clickable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/amendcar"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/image_iKnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iknow"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
</RelativeLayout>
