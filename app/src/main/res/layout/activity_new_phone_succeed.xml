<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_phone_succeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.mine.Account.MineDetail.NewPhoneSucceedActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:tag="skin:appbar:background"
        android:background="@drawable/appbar_day"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录账号"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/image"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:tag="skin:succeed:src"
        android:src="@drawable/succeed_day"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/toolBar_myAccount"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:orientation="vertical"
        android:layout_marginTop="47dp"
        android:tag="skin:line:background"
        android:gravity="center_horizontal"
        android:background="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改成功"
        android:textColor="#000"
        android:tag="skin:textColor2:textColor"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看个人资料请到"
        android:textColor="#5a5858"
        android:tag="skin:textColor8:textColor"
        android:textSize="13sp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心中查看"
        android:layout_marginTop="12dp"
        android:textColor="#5a5858"
        android:tag="skin:textColor8:textColor"
        android:textSize="13sp"
        android:layout_marginBottom="20dp"/>
    </LinearLayout>


</RelativeLayout>
