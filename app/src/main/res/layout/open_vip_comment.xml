<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:tag="skin:line:background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:tag="skin:textColor:textColor"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="25dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:tag="skin:background_view:background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:id="@+id/linear_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/balance"
            android:layout_marginLeft="25dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="余额"
            android:tag="skin:textColor:textColor"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"/>

        <RadioButton
            android:clickable="false"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_openvip_selector"
            android:id="@+id/radioButton_balance"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:tag="skin:background_view:background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:id="@+id/linear_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/apay"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="#000"
            android:tag="skin:textColor:textColor"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"/>
        <RadioButton
            android:clickable="false"
            android:id="@+id/radioButton_alipay"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_openvip_selector"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:tag="skin:background_view:background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:id="@+id/linear_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/wechat"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:tag="skin:textColor:textColor"
            android:layout_marginLeft="15dp"/>
        <RadioButton
            android:clickable="false"
            android:id="@+id/radioButton_wechat"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_openvip_selector"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>