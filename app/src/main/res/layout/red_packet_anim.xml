<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/relativeLayout_red"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_redUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/redpackup"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hongbao_wb"
        android:scaleType="fitXY"
        android:id="@+id/imageView_down"
        android:layout_alignTop="@+id/image_redUp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/imageView_down"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:id="@+id/imageView_open"
        />
</RelativeLayout>