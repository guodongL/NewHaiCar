<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="skin:bg_listviewitem_trading:background"
        android:background="@drawable/bg_listviewitem_trading_day"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_typeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出婚车（元）"
                android:textColor="#000"
                android:tag="skin:textColor11:textColor"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/textView__mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1400.00"
                android:tag="skin:textColor2:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#010101"
                android:textSize="30sp"
                android:layout_marginLeft="35dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="21dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间："
                android:tag="skin:textColor12:textColor"
                android:textColor="#605e5e"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:tag="skin:textColor12:textColor"
                android:textColor="#605e5e"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易单号："
                android:tag="skin:textColor12:textColor"
                android:textColor="#605e5e"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:tag="skin:textColor12:textColor"
                android:textColor="#605e5e"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:tag="skin:textColor12:textColor"
                android:textColor="#605e5e"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-20"
                android:textColor="#000"
                android:tag="skin:textColor13:textColor"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/textView_time" />

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出婚车"
                android:textColor="#000"
                android:tag="skin:textColor13:textColor"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/textView_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1293282785246897124"
                android:textColor="#000"
                android:tag="skin:textColor13:textColor"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/textView_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:tag="skin:textColor13:textColor"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/textView__remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理中"
                android:tag="skin:textColor13:textColor"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>