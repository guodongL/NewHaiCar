<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.mine.Account.MineDetail.DetailsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/appbar_day"
        android:focusableInTouchMode="true"
        android:tag="skin:appbar:background">
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/textView_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:padding="8dp"
            android:cropToPadding="true"
            android:textColor="#fff"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:layout_marginRight="20dp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:tag="skin:line:background">
            <LinearLayout
                android:id="@+id/line_hight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="身高"
                    android:textColor="#000"
                    android:tag="skin:textColor2:textColor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView1" />
                <TextView
                    android:id="@+id/textView_user_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="请输入身高"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="75dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="学历"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入学历"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="75dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入体重"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="75dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="星座"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_constellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入星座"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="75dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="年薪"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_yearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入年薪"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="75dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="兴趣爱好"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入兴趣爱好"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_smoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="是否吸烟"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_smoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择是否吸烟"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_drink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="是否饮酒"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textView_user_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择是否饮酒"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="是否有宠物"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textView_user_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择是否有宠物"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="23dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_married"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="婚姻状况"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_marriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择婚姻状况"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_eat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="爱吃的食物"
                    android:tag="skin:textColor2:textColor"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入爱吃的食物"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="23dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="喜欢的明星"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:tag="skin:textColor2:textColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入喜欢的明星"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="23dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="关注的节目"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:tag="skin:textColor2:textColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/textView_user_program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入关注的节目"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="23dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                android:layout_marginLeft="15dp"
                android:tag="skin:background_view:background"/>
            <LinearLayout
                android:id="@+id/line_oneself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="自我介绍"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:tag="skin:textColor2:textColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textView_user_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入自我介绍"
                    android:textSize="16sp"
                    android:textColor="#999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
