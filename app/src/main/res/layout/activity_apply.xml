<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.order.SubmitCash.Acticity.MarginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:tag="skin:appbar:background"
        android:background="@drawable/appbar_day"
        >
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动金额"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar_myAccount">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:tag="skin:line:cardBackgroundColor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="skin:line:background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textView_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017/04/26"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:tag="skin:textColor:textColor"
                            android:paddingTop="12dp"
                            android:paddingLeft="12dp"/>
                        <TextView
                            android:id="@+id/textView_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上午   奥迪A6L"
                            android:textColor="#000"
                            android:singleLine="true"
                            android:tag="skin:textColor:textColor"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动金额:"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:paddingTop="12dp"
                            android:tag="skin:textColor:textColor"
                            android:paddingLeft="12dp"/>
                        <TextView
                            android:id="@+id/textView_marginMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥1400/人"
                            android:tag="skin:textColor:textColor"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:layout_marginBottom="22dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/cardView1"
                android:layout_marginTop="30dp">
                <include
                    layout="@layout/open_vip_comment"
                    android:tag="skin:line:background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/button_pay"
                android:layout_below="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即支付"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tag="skin:buttonText:textColor|skin:bg_openvip_paybutton:background"
                android:background="@drawable/bg_openvip_paybutton_day"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
