<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relative_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/maindown_day"
        android:tag="skin:maindown:src"
       android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_carLogo"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        />
        <TextView
            android:id="@+id/textView_order_cartype"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="奥迪A6L 黑"
            android:textColor="#000"
            android:tag="skin:textColor1:textColor"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/image_order_carclass"
            android:layout_width="25dp"
            android:layout_height="32dp"
           android:layout_marginRight="15dp"
           />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:tag="skin:timechoose:background"
        android:background="@drawable/timechoose_day"
        android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/09"
            android:textSize="12sp"
            android:tag="skin:textColor1:textColor"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="skin:mileage:background"
            android:background="@drawable/mileage_day"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_order_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100Km"
            android:textSize="12sp"
            android:tag="skin:textColor1:textColor"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="skin:money:background"
            android:background="@drawable/money_day"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200元"
            android:textSize="12sp"
            android:tag="skin:textColor1:textColor"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="skin:address:background"
            android:background="@drawable/address_day"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/textView_order_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和平区万达广场"
            android:singleLine="true"
            android:textSize="12sp"
            android:tag="skin:textColor1:textColor"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
        <ImageView
            android:id="@+id/image_order_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
           />
        <ImageView
            android:id="@+id/image_grabOrder"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/grabbutton_day"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout>