<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="skin:background:background"
    android:background="#eee"
    tools:context="com.example.administrator.myhaicar.main.mine.MyCar.Acticity.CarPhotoActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/appbar_day"
        android:tag="skin:appbar:background">
        <ImageView
            android:id="@+id/toolBar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:cropToPadding="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加照片"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加行驶证照片"
        android:textSize="14sp"
        android:tag="skin:textColor19:textColor"
        android:textColor="#646262"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="#fff"
            android:tag="skin:line:background"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/image_dravelPhoto"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:tag="skin:addphoto:src"
                android:src="@drawable/addphoto_day"
                android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请添加行驶证左面照片"
                    android:textSize="12sp"
                    android:tag="skin:textColor16:textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:src="@drawable/drivelcard"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="示例"
                    android:tag="skin:textColor16:textColor"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加身份证照片"
            android:textSize="14sp"
            android:tag="skin:textColor19:textColor"
            android:textColor="#646262"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="#fff"
            android:padding="10dp"
            android:tag="skin:line:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_identityPhoto"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:src="@drawable/addphoto_day"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请添加身份证正面照片"
                    android:textSize="12sp"
                    android:tag="skin:textColor16:textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:src="@drawable/identitycard"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="示例"
                    android:textSize="12sp"
                    android:tag="skin:textColor16:textColor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/button_addCarInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:tag="skin:buttonText:textColor|skin:bg_openvip_paybutton:background"
            android:background="@drawable/bg_openvip_paybutton_day"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"/>
        <ProgressBar
            android:id="@+id/id_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:indeterminateDrawable="@drawable/animdraw2"
            android:indeterminateDuration="1500"
            android:visibility="gone" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
