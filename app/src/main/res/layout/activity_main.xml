<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:tag="skin:background:background"
    tools:context="com.example.administrator.myhaicar.main.order.This.Acticity.OrderActivity">
    <include
        layout="@layout/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:tag="skin:backdrop:src"
                android:src="@drawable/backdrop_day"
                android:scaleType="fitXY"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head_image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="65dp"
                app:actualImageScaleType="centerCrop"
                app:roundAsCircle="true"
                android:background="@drawable/headview"
                android:layout_centerVertical="true"
                android:layout_marginLeft="49dp"
                />
            <LinearLayout
                android:id="@+id/line_name"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:background="@drawable/name_id_bg_day"
                android:layout_marginTop="66dp"
                android:tag="skin:name_id_bg:background"
                android:layout_toRightOf="@+id/head_image"
                android:orientation="horizontal"
                android:layout_marginLeft="1dp"
               >
            <TextView
                android:id="@+id/textView_nameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="董子健1532"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/head_image"
               />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_balance"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:background="@drawable/name_id_bg_day"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/line_name"
                android:tag="skin:name_id_bg:background"
                android:layout_toRightOf="@+id/head_image"
                android:orientation="horizontal"
                android:layout_marginLeft="1dp">
                <TextView
                    android:id="@+id/textView_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="余额     ¥200"
                    android:textColor="#fff"
                    android:gravity="center_horizontal"
                    android:layout_toRightOf="@+id/head_image"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:tag="skin:line:background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_myOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="9dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="47dp"
           />
                <ImageView
                    android:id="@+id/image_dop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redpot"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="6dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="9dp"/>
    <LinearLayout
        android:id="@+id/textView_myAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="9dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="12dp"
            />
            <ImageView
                android:id="@+id/image_dop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redpot"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的账户"
            android:textColor="#000"
            android:tag="skin:textColor2:textColor"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:tag="skin:background_view:background"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
        <LinearLayout
            android:id="@+id/linear_carManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="9dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/addcar"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="12dp"/>
                <ImageView
                    android:id="@+id/image_dop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redpot"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="8dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆管理"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
               android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <LinearLayout
            android:id="@+id/linear_haiWelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:paddingBottom="9dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/welfare"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="12dp"/>
                <ImageView
                    android:id="@+id/image_dop4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redpot"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="8dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嗨福利"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
               android:layout_marginTop="14dp"
                android:layout_marginLeft="16dp"
                 />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <LinearLayout
            android:id="@+id/linear_haiBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/business"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="12dp"/>
                <ImageView
                    android:id="@+id/image_dop5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redpot"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="8dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嗨商家"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/textView" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <LinearLayout
            android:id="@+id/linear_setUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:paddingBottom="9dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/set_day"
                    android:tag="skin:set:src"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
               android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <LinearLayout
            android:id="@+id/linear_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="12dp"
                />
                <ImageView
                    android:id="@+id/image_dop7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redpot"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="8dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助"
                android:textColor="#000"
                android:tag="skin:textColor2:textColor"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="16dp"
                 />
        </LinearLayout>
        <Button
            android:id="@+id/button_back"
            android:layout_width="134dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:text="退出"
            android:tag="skin:textColor3:textColor|skin:bg_shape:background"
            android:layout_gravity="center_horizontal"
            android:textColor="#be9651"
            android:background="@drawable/bg_shape_day"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服电话400-45120"
                    android:textColor="#616161"
                    android:layout_marginTop="27dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="27dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
