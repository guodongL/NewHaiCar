<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:tag="skin:line:background">
        <TextView
            android:id="@+id/textView_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号2017052631"
            android:paddingTop="12dp"
            android:tag="skin:textColor17:textColor"
            android:textColor="#060606"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:textSize="12sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_carClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/corner_day"
                android:tag="skin:corner:src"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_carclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头车"
                android:tag="skin:textColor17:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aodi"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奥迪A6L  黑"
                android:tag="skin:textColor17:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="skin:timechoose:src"
                android:src="@drawable/timechoose_day"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离出车时间还有26天"
                android:tag="skin:textColor17:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:tag="skin:background_view:background"
            android:background="#eee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/am"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.06.20-08:06"
                android:tag="skin:textColor17:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_day"
                android:paddingTop="12dp"
                android:tag="skin:address:src"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和平区万达广场东门-沈河区鹿鸣小区"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:tag="skin:textColor17:textColor"
                android:textColor="#060606"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:id="@+id/textView_order_site" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mileage_day"
                android:tag="skin:mileage:src"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100Km"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:tag="skin:textColor17:textColor"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/money_day"
                android:tag="skin:money:src"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200元"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:tag="skin:textColor17:textColor"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:tag="skin:background_view:background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/balance1"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView_order_price1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="保证金1500元"
                android:tag="skin:textColor17:textColor"
                android:layout_gravity="center_vertical"
                android:textColor="#060606"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/image_order_bond"
                android:layout_width="55dp"
                android:layout_height="28dp"
                android:src="@drawable/noend_day"
                android:layout_marginRight="10dp"
                android:tag="skin:noend:src"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>